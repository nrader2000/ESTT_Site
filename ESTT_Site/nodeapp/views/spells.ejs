<div class="w3-padding-large w3-black w3-display-container" id="main">
    <a href="/database" class="link"><i class="fas fa-caret-left"></i> Back to Database</a>
    <div class="w3-container w3-padding-32 w3-center">
        <h2>Spells</h2>
        <div class="w3-row-padding w3-margin-top">
            <div class="w3-col m2 s6 w3-display-container">
                <a href="/database/spells?SpellTypeID=1" style="width:100%;">Alteration</a>
            </div>
            <div class="w3-col m2 s6 w3-display-container">
                <a href="/database/spells?SpellTypeID=2" style="width:100%;">Conjuration</a>
            </div>
            <div class="w3-col m2 s6 w3-display-container">
                <a href="/database/spells?SpellTypeID=3" style="width:100%;">Destruction</a>
            </div>
            <div class="w3-col m2 s6 w3-display-container">
                <a href="/database/spells?SpellTypeID=4" style="width:100%;">Illusion</a>
            </div>
            <div class="w3-col m2 s6 w3-display-container">
                <a href="/database/spells?SpellTypeID=5" style="width:100%;">Restoration</a>
            </div>
        </div>
        <div class="search_box w3-padding-top-24">
            <input type="text" id="search_input" placeholder="Filter Table with Spell Name" onkeyup="query()">
        </div>
    </div>
    <table id="filter-table">
        <tr>
            <th>Spell Name</th>
            <th>Spell Description</th>
            <th>Magicka Cost</th>
        </tr>    
        <%
            if(spellsData.length!=0){
            var i=1;
            spellsData.forEach(function(data){
        %>
        <tr>
            <td><%=data.SpellName %></td>
            <td><%=data.SpellDesc %></td>
            <td><%=data.SpellMagickaCost %></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
        <tr>
            <td colspan="3">No Data Found</td>
        </tr>
        <% } %>
    </table>
